@model IEnumerable<Product>

<h2>Products</h2>

<div style="display: block">
    <a href="/Product/InsertProduct/"><input class="btn btn-success" value="Create a new Product" type="button" /></a>
</div>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>On Sale</th>
        <th>Stock Level</th>
    </tr>

    @foreach (var product in @Model)
    {
        <tr>
            <td><a id="ProductIDNumber" href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.CategoryID</td>
            @* @if(product.OnSale == 1)
            {
                <td>Yes</td>
            }
            else
            {
                <td>No</td>
            } *@
            <td>@(product.OnSale == 1 ? "Yes" : "No")</td>
            <td>@product.StockLevel</td>
        </tr>
    }

</table>